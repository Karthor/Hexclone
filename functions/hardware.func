		setCodeBody('<div class="row-fluid">');
		setCodeBody('<div class="span4"></div>');
		setCodeBody(serverBox($data,$GLOBALS["servers_added"]));
		setCodeBody('</div>');
	} elseif($num == 2){
		setCodeBody('<div class="row-fluid">');
		setCodeBody('<div class="span2"></div>');
		setCodeBody(serverBox($data,$GLOBALS["servers_added"]));
		setCodeBody(serverBox($data,$GLOBALS["servers_added"]));
		setCodeBody('</div>');
	} elseif($num == 3){
		setCodeBody('<div class="row-fluid">');
		setCodeBody(serverBox($data,$GLOBALS["servers_added"]));
		setCodeBody(serverBox($data,$GLOBALS["servers_added"]));
		setCodeBody(serverBox($data,$GLOBALS["servers_added"]));
		setCodeBody('</div>');
	}
}

